<%= form_for @user, url: password_reset_path(@user.password_reset_token), html: { method: :patch } do |form| %>
  <div class='grouped'>
    <%= form.label :password, 'Nové heslo' %>
    <%= form.password_field :password %>

    <%= form.label :password_confirmation, 'Nové heslo (znovu)' %>
    <%= form.password_field :password_confirmation %>
  </div>
  <%= submit_tag 'Uložit nové heslo a přihlásit se' %>
<% end %>
