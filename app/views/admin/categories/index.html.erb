<% content_for :side do %>
  <%= link_to 'Vytvořit novou kategorii', new_admin_category_path, class: :btn %>
<% end %>

<% none = true %>
<% @categories.each do |category| %>
  <% none = false %>
  <div class='item'>
    <b><%= "#{category.id} :: #{category.name}" %></b>
    <br>
    <%= category.description %>
    <div class='actions'>
      <div class='left'>
        <%= link_to '&#xf040;'.html_safe, edit_admin_category_path(category), class: 'awesome' %>
        <span class='item_tiny_info'>
          <%= count = category.tasks.count %>
          <%= 'otázek' if count == 0 || count >= 5 %>
          <%= 'otázka' if count == 1 %>
          <%= 'otázky' if count >= 2 && count <= 4 %>
      </span>
      </div>
      <div class='right'>
        <%= link_to '&#xf014;'.html_safe, admin_category_path(category), class: 'awesome', method: :delete, data: { confirm: 'Jste si jisti?' } %>
      </div>
      <div class='clear'></div>
    </div>
  </div>
<% end %>

<% if none %>
  <div class='center'>
    <h3>Žádné kategorie</h3>
  </div>
<% end %>
